<!DOCTYPE html>
<html>
  <head>
    <%- include("function/header.ejs") %>

  </head>
  <body class="bg-light">

    <body data-spy="scroll" data-target="#ftco-navbar-spy" data-offset="0">
      <!-- A grey horizontal navbar that becomes vertical on small screens -->
      <div class="site-wrap">
      <%- include("function/navbar.ejs") %>

      <header class="site-header">
        <div class="row align-items-center">
          <div class="col-5 col-md-3">

          </div>
          <div class="col-2 col-md-6 text-center site-logo-wrap">
            <a href="index.html" class="site-logo">M</a>
          </div>
          <div class="col-5 col-md-3 text-right menu-burger-wrap">
            <a href="#" class="site-nav-toggle js-site-nav-toggle"><i></i></a>

          </div>
        </div>

      </header> <!-- site-header -->
<!-- main page start-->

<div class="main-wrap " id="section-danhsachdoanchuanbixong">

    <div class="cover_1 overlay bg-light">
      <div class="img_bg" style="background-image: url(images/pic-1.jpg);" data-stellar-background-ratio="0.5">
        <div class="container">
          <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10" data-aos="fade-up">
              <h2 class="heading mb-5">Welcome to Meal</h2>
              <p><a href="#section-reservation" class="smoothscroll btn btn-outline-white px-5 py-3">Welcome to BK
                  Food Court</a></p>

              <p><a href="#section-reservation" class="smoothscroll btn btn-outline-white px-5 py-3">Thực đơn hôm
                  nay</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
<!-- main page end-->







    <!-- menu foods start -->
    <div class="container-fluid">
      <div class="card shadow mb-4">
          <div class="card-header py-3">
              <h4 class="m-0 font-weight-bold text-primary">Menu
                  <a id="btn-add" href="#" class="btn btn-primary btn-icon-split" style="float: right;">
                      <span class="icon text-white-20">
                          <i class="fas fa-vote-yea"></i>
                      </span>
                      <span class="noti"></span>
                      
                      <span class="text">Save</span>
                  </a>
              </h4>
          </div>
          <div class="card-body">
              <div class="border border-light p-md-2" id="menu" method="POST" action="/cms/menu" enctype="application/x-www-form-urlencoded">
                  <div class="form-row mb-4">   
                      <% data.forEach(element => { %>
                      <div class="col-lg-6 col-12 mb-2">
                          <div class="card border-left-primary shadow h-100 py-2 d-flex flex-row">
                              <img src="/uploads/foods/<%= element.image %>"
                                  style="width: 25%; height: 140px; border-radius: 5px; margin-left: 8px;" alt="">
                              <div class="card-body">
                                  <div class="row no-gutters align-items-center">
                                      <div class="col mr-2">
                                          <div class="text-md font-weight-bold text-primary text-uppercase mb-1">
                                              <%= element.title %> </div>
                                          <div class="h5 mb-0 font-weight-bold text-gray-800"><%= element.price %> vnđ </div>
                                      </div>
                                      <div class="col-auto">
                                          <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                      </div>
                                  </div>
                                  <div class="row d-flex align-items-end justify-content-end mt-2 ">
                                    <form id="themvaogiohang" method="post" action="/">
                                      <label>Số lượng</label>
                                      <input class="amount" type="number" class="form-control" name='amount'
                                          style="width: 100px;"  min='1' max=<%= element.amount %>>
                                          <input type="hidden" name="idfood" value="<%= element.foodID %> ">
                                          <button type="submit" class="btn-primary btn">Thêm vào giỏ hàng</button>
                                        </form>
                                  </div>
                              </div>
                          </div>
                      </div>
  
                      <% }) %>
                  </div>
  
                </div>
          </div>
      </div>
  
  
  </div>
    <!-- menu foods end -->
</div>
    <script >
      $(".themvaogiohang").submit(function(e){
        e.preventDefault();
      })
    </script>
  </body>
</html>
