      <div class="section pb-3 bg-white" id="section-naptien" data-aos="fade-up">
        <div class="container">
          <div class="row align-items-center justify-content-center">
            <div class="col-md-12 col-lg-8 section-heading">
         

               <!-- menu foods start -->
               
    <div class="section bg-light" id="section-menu" style="background-color: white !important;" data-aos="fade-up">
      <div class="container">
        <div class="row section-heading justify-content-center mb-5">
          <div class="col-md-8 text-center">
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-8">
           
            <div class="tab-content" id="pills-tabContent">
              <div class="tab-pane fade show active" id="pills-breakfast" role="tabpanel"
                aria-labelledby="pills-breakfast-tab">
                
                
                <% data.forEach(element => { %>
                  <div class="row">
                      <div class="card border-left-primary shadow h-100 py-2 d-flex flex-row">
                          <img src="/uploads/foods/<%= element.image %>"
                              style="width: 25%; height: 140px; border-radius: 5px; margin-left: 8px;" alt="">
                          <div class="card-body">
                              <div class="row no-gutters align-items-center">
                                  <div class="col mr-2">
                                      <div class="text-md font-weight-bold text-primary text-uppercase mb-1">
                                          <%= element.title %> </div>
                                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%= element.description %> vnđ </div>
                                  </div>
                                 
                              </div>
                              <div class="row d-flex align-items-end justify-content-end mt-2 ">
                                <form id="themvaogiohang" method="post" action="/">
                                  <label>Số lượng</label>
                                  <input class="amount" type="number" class="form-control" name='amount' style="width: 100px;"
                                    min='1' ; value="<%= element.soluong %>">
                                  <input type="hidden" name="idfood" value="<%= element.foodID %> ">
                                  <!-- <button type="submit" class="btn-primary btn"></button> -->
                                </form>
                              </div>
                          </div>
                      </div>
                  </div>
                  <br>
                  <% }) %>
           

            </div>
          </div>
          <div class="abcd">
            <form action="/thanhtoan" method="post" class="col-4">
              <button class="btn btn-primary" type="submit" style="float: left;">Thanh toán</button>
            </form>
           </div>

            </div>
          </div>

        </div>
      </div>
    </div> <!-- .section -->

    
    </div>
  </div>
</div>
